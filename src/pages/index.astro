---
import Layout from '../layouts/Layout.astro';
import Installer from '../components/Installer.svelte';
import VueExample from '../components/vue/VueExample.vue';
import CodeExamples from '../components/react/CodeExamples.tsx'
---

<Layout title="Dragster - Composable for drag and drop.">
	<main>
		<div class='min-h-screen px-6 lg:px-0 hero-bg lg:min-h-[60vh] dark:bg-black bg-whitet grid place-content-center gap-2'>
			<div class='container text-center lg:text-left mx-auto grid grid-cols-1 lg:grid-cols-2'>
				<div class='min-w-full content'>
					<h1 class='text-6xl lg:text-8xl !leading-[7rem] font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent'>
						Dragster
					</h1>
					<p class='pt-2 pb-8 font-[300] text-md lg:text-xl max-w-[30rem]'>
						Lightweight, barebones, no bs solution to drag and drop elements
						between lists
					</p>
					<a href='https://github.com/alextana/dragster#readme'>
						<button class='btn btn-primary btn-lg'>
							Get Started
						</button>
					</a>
				</div>
				<div class='mb-4 mt-16 lg:mt-0 w-max mx-auto h-full text-center justify-center'>
					<Installer client:only="svelte"/>
				</div>
			</div>
		</div>
		<section class='w-full px-6 lg:px-0 bg-gradient-to-b from-base-300 dark:to-black to-white'>
			<div class='container max-w-[960px] text-center  mx-auto py-16'>
				<div class='prose max-w-full pt-12'>
					<h2 class='text-4xl lg:text-7xl mb-8 dark:text-white text-black'>
						Drag and drop should not be complicated
					</h2>
					<p class='text-md lg:text-xl'>
						A composable for Vue, a hook for React (coming soon) and Svelte (coming soon).
					</p>
					<p class='text-md lg:text-xl'>
						Supports dragging and dropping between any number of lists and
						animations are left up to your control, we don{"'"}t ship any, but
						we{"'"}ll include examples on how to make it look nice!
					</p>
				</div>

				<div class='mt-16' />
					<VueExample client:only="vue" />
				<div class='mb-16' />

				<CodeExamples client:only="react"/>
			</div>
		</section>


	</main>
</Layout>

<style>
	@media (prefers-color-scheme: dark) {
	.content {
		z-index: 2
	}
	.hero-bg {
		position: relative;
	}
	.hero-bg::before {
		z-index: 0;
		filter: blur(200px);
		background: rgb(111, 28, 152);
		content: '';
		position: absolute;
		top: 50%;
		transform: translate(-50%, -50%);
		left: 50%;
		width: 50vw;
		height: 25vh;
	}
}
</style>

